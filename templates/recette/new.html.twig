{% extends 'base.html.twig' %}

{% block title %}Nouvelle recette{% endblock %}

{% block body %}
    <h1>Ma nouvelle recette</h1>

    <form action="{{ path ('_new') }}" method="POST">

        {# section ingredients #}
        <div class="container jumbotron">
            <table class="table text-center"  >
            <thead>
                <tr>
                    <td>Catégorie</td>
                    <td>Variété</td>
                    <td>Précision</td>
                    <td>Quantité</td>
                    <td>Unité mesure</td>
                </tr>
            </thead>
            <tbody id="ingredients">
            
                <tr id="ingredient1">
                    <td>
                        <select class="form-control" style="background-color: transparent;border:none;" >
                            {% for categorieAliment in categorieAliments %}
                                <option value="{{ categorieAliment.nomcategoriealiment }}">{{ categorieAliment.nomcategoriealiment }}</option>
                            {% endfor %}
                        </select>
                    </td>
                    <td>
                        <select class="form-control" name="i0[aliment]" style="background-color: transparent;border:none;">
                            {% for aliment in aliments %}
                                <option  value="{{ aliment.nomaliment }}">{{ aliment.nomaliment }}</option>
                            {% endfor %}
                        </select>
                    </td>
                    <td>
                        <input type="text" name="i0[precision]" style="background-color: transparent;border:none;height:38px;" placeholder="ex: poitrine de ">
                    </td>
                    <td>
                        <input type="number" name="i0[quantite]" style="background-color: transparent;border:none;height:38px;" placeholder="quantité">
                    </td>
                    <td>
                        <select class="form-control" name="i0[unite]" style="background-color: transparent;border:none;">
                            {% for unite in unites %}
                                <option value="{{ unite.nomunite }}">{{ unite.nomunite }}</option>
                            {% endfor %}
                        </select>
                    </td>
                </tr>
               
            </tbody>
            </table>
            <div>
                <button type="button" id="AjoutIngredient" >Ajouter un ingrédient</button>
            </div>
        </div>    
        {# fin section ingredients #}
        {# section etapes #}
        <div class="container jumbotron">
            <div id="etapes"></div>
            <div>
                <button type="button" id="AjoutEtape" >Ajouter une étape</button>
            </div>
        </div>    
        {# fin section etapes #}    
    
    <input type="submit" value="Valider">
    </form>

    
{% endblock %}